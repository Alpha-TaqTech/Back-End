{
  "name": "chat-rpg-back",
  "version": "1.0.0",
  "description": "Backend da aplicação 'Chat RPG', cujo desafio é quesito para finalizar o ciclo 2 - Alpha EdTech",
  "main": "src/index.ts",
  "scripts": {
    "start": "node -r ts-node/register dist/index.js",
    "type-check": "tsc --noEmit",
    "dev": "tsc-watch --onSuccess \"node -r ts-node/register dist/index.js --inspect\" ",
    "exec": "node -r ts-node/register src/index.ts",
    "lint": "eslint --ext .js,.ts src --max-warnings 10",
    "test": "mocha --no-config -r ts-node/register --colors --delay src/index.ts --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alpha-TaqTech/Back-End.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alpha-TaqTech/Back-End/issues"
  },
  "homepage": "https://github.com/Alpha-TaqTech/Back-End#readme",
  "dependencies": {
    "axios": "1.3.4",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.0",
    "mongoose": "7.0.0",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.3.12"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.14.4",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "3.14.2",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "class-validator": "0.13.2"
  }
